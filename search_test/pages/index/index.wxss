.footerView {
  /* position: fixed; */
  bottom: 0.52em;
  display: flex;
  flex-direction: row;
  height: auto;
  justify-content: center;
  align-items: center;
  /* width: 100%; */
  margin: 30rpx;
}

.footer {
  flex-grow: 1;
  poistion: absolute;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: #666;
}

.line {
  flex-grow: 1;
  background: #666;
  height: 3rpx;
}

.footer:after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}
