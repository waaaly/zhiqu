<view class='searchBar'>
        <navigator url="../../pages/search/search" class="heard-search">
            <image src="../../image/search.png"     class="heard-search-icon"/>
        搜索商品或商铺
        </navigator>
</view>

  <!-- <view style='background:#fff;width:100%;height:10rpx;'></view> -->

<view class="classifycontainer">
  <!--左侧栏-->
  <view class="nav_left">
    <block wx:for="{{cateItems}}">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
      <view class="nav_left_items {{curNav == index ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{index}}">{{item.name}}</view>
    </block>
  </view>
  <!--右侧栏-->
  <view class="nav_right">
    <view class='childBanner'>
      <image style="height:150px;width:220px;"src="{{cateItems[curNav].banner_url}}" mode="scaleToFill" ></image>
    </view>
    <!--如果有数据，才遍历项-->
    <view wx:if="{{foodList.length!=0}}">
      <block wx:for="{{foodList}}" wx:for-item="foodItem">
        <view class="nav_right_items">
        <!--界面跳转 -->
          <view style="position:relative;" bindtap='gotoFoodDetail' data-food="{{foodItem}}">
            <image wx:if="{{foodItem.is_new}}" style="position: absolute;left: 0rpx;top: 0rpx;width:40rpx;height:40rpx;" src='../../image/new.png'></image>
            <image wx:elif="{{foodItem.is_hot}}" style="position: absolute;left: 0rpx;top: 0rpx;width:40rpx;height:40rpx;" src='../../image/hot.png'></image>
            <image src="{{imageUrl+foodItem.primary_pic_url}}"></image>
            <text>{{foodItem.goods_name}}</text>
          </view>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view class="nodata_text" wx:else>该分类暂无数据</view>
  </view>
</view>


