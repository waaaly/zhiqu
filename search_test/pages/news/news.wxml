<!--pages/news/news.wxml-->
<view class='flex'>
  <view class='time'>2019-01-04 13:30</view>
  <view class='newsDetail'>
    <view class='hear'>
      <image src="../../image/Z.png"></image>
      <text>新的订单状态变化通知</text>
    </view>

    <view class='order_process'>
      <view class='process_wrap' wx:for="{{processData}}" wx:key="">
        <view class='process'>
          <view class='process_line' style="background:{{item.start}}"></view>
          <image class='process_icon' src="{{item.icon}}"></image>
          <view class='process_line' style="background:{{item.end}}"></view>
        </view>
        <text class='process_name'>{{item.name}}</text>
      </view>
    </view>
    <block wx:for="{{[1,2,3,4,5]}}">
      <view class='colunmProcessItem'>
        <view class="colunmProcessItemTime">19:30:34</view>
        <view class="colunmProcessItemDot"></view>        
        <view class="colunmProcessItemContent">用户提交表单</view>
      </view>
      <block wx:if="{{index!=4}}">
        <view class="colunmProcessItemLine"></view>
      </block>
    </block>
  </view>
</view>