/* pages/news/news.wxss */
page{
  background: #eee;
}

.flex{
  background: #eee;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.time{
  background: #aaa;
  text-align: center;
  color: #fff;
  font-size:28rpx;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 5rpx;
  width: 250rpx;
}

.newsDetail{
  background: #fff;
  margin: 20rpx 30rpx;
  width: 90%;
  padding: 10rpx;
  border-radius: 10rpx;
}

.hear{
  display: flex;
  align-items: center;
}

.hear image{
  width: 45rpx;
  height: 45rpx;
}

.hear text{
  color: #666;
  font-size: 30rpx;
}

.order_process {
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background-color: #fff;
}

.process_wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}

.process {
  display: flex;
  align-items: center;
  width: 100%;
}

.process_icon {
  width: 50rpx;
  height: 50rpx;
}

.process_line {
  background: #eff3f6;
  flex: 1;
  height: 5rpx;
}
.process_name {
  font-size: 24rpx;
}
.colunmProcessItem{
  display: flex;
  align-items: center;
  width: 100%;
}
.colunmProcessItemTime{
  color:#666;
  font-size: 24rpx;
}
.colunmProcessItemJoin{
  display: flex;
  align-items: center;
  background: #fff;
  flex-direction: column;
}
.colunmProcessItemDot{
  background: #4a8dc5;
  /* flex: 1;
  height: 5rpx; */
  width: 20rpx;
  height: 20rpx;
  border-radius:50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.colunmProcessItemLine{
  background:#aaa;
  flex:1;
  width: 3rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-left:127rpx;
}
.colunmProcessItemContent{
  color:#666;
  font-size: 24rpx;
}
