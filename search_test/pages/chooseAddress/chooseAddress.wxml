<!--pages/chooseAddress/chooseAddress.wxml-->
<view class='hear'>
  <view class='currentLocation'>
    <image class='Icon' src="../../image/weizhi.png"></image>
    <view class='postionText'>{{currentAddress}}</view>   
  </view>
    <view class='relocation'>
    <image class='Icon' src="../../image/relocation.png"></image>
    <view  bindtap="userChooseAddress" class='postionText'style="font-size:33rpx;">点击重新定位</view>   
  </view>
</view>
<view class='body'>
  <view class='bodyTitle'> 
    <image class='dizhiIcon' src="../../image/shouye.png"></image>
    <view class='dizhiFont'>我的收货地址</view>   
  </view>
  <!-- <view class='defalut'>默</view> -->
  <scroll-view scroll-y="true" class="addressScroll" >
      <view bindtap="gotoBack" data-id="{{index}}" class="item" wx:for="{{userAddressInServer}}">
          <view style="">{{item.contact}}
            <text style="margin-left:30rpx;font-size:30rpx;margin-right:10rpx;color:#666;">{{item.phone}}</text>
          </view>
          <view style="font-size:30rpx;margin-right:10rpx;color:#666;">{{item.area_info}}{{item.address}}</view>   
      </view>
  </scroll-view>
</view>

<button bindtap="gotoAddress" class='footButtom'>新增收货地址</button>
