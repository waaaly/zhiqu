                    <image @tap.stop='openPic(codeQR)'  src="../images/icons/openFlie.png"/>
                </view>
            </view>
        </view>
        <!--足部-->
        <view class="footer" @tap="sumbit">
            <text>提交申请</text>
        </view>
         <!--提示1-->
        <view class="opacity" style="{{showTips==1?'opacity:0.9;':'opacity:0;z-index:-1;'}}" >
