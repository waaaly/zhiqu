                    </picker-view-column>
                    <picker-view-column>
                    <view wx:for="{{areas}}" class="picker-item" wx:key="">
                        {{item.name}}</view>
                    </picker-view-column>
                </picker-view>
            </view>
        </view>
         <!--申请成为团长-->
        <view wx:else>
            <view class="flex-row" style="margin:40rpx 20rpx;">
                <text class="left">团长</text> 
                <input class="right"  placeholder="团购发起者" maxlength="5" type='text'  bindinput="personName"/>  
            </view>
            <view class="flex-row">
