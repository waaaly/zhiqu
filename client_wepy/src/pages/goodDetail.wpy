    <view class='protitle'>
      <text class='bigtil'>{{goodInfo.goods_name}}</text>
      <text class='smalltitle'>{{goodInfo.goods_desc}}</text>   
      <view class='price-sell'>
					<text class="price">￥{{goodInfo.retail_price}}</text>
					<text class='sell'>月销{{goodInfo.sell_volume}}</text>
