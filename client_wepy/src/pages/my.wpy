                <image  src="{{userInfoInServer.avatar}}"  class="_img "/>
            </view>
            <view bindtap="goMyInfo" class="shoperAvatar">
                <image style="border-radius:50%;height:60px;width:60px;" src="{{userInfoInServer.avatar}}"/>
            </view>
            <view bindtap="goMyShop" class="shopIcon">
